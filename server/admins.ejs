<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>Orders Made</th>
        </tr>
      </thead>
      <tbody id="adminTableBody">
        <!-- Admin data will be dynamically inserted here -->
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    // Function to fetch admin data and populate the table
    function fetchAdminData() {
      $.get("/adminData", function(data) {
        // Clear previous data
        $("#adminTableBody").empty();

        // Loop through the data and append to the table
        data.forEach(function(admin) {
          $("#adminTableBody").append(`
            <tr>
              <td>${admin.email}</td>
              <td>${admin.password}</td>
              <td>${admin.ordersMade}</td>
            </tr>
          `);
        });
      });
    }

    // Fetch admin data when the page loads
    $(document).ready(function() {
      fetchAdminData();
    });
  </script>
</body>
</html>
